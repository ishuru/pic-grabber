{
  "manifest_version": 3,
  "name": "Image Downloader Plus",
  "version": "1.1",
  "description": "Download any image from any webpage, including protected and dynamically loaded images",
  "icons": {
    "16": "assets/download-16.png",
    "32": "assets/download-32.png",
    "48": "assets/download-48.png"
  },
  "permissions": [
    "downloads",
    "scripting",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/styles.css"],
      "js": ["js/utils.js", "js/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Image Downloader Plus",
    "default_icon": {
      "16": "assets/download-16.png",
      "32": "assets/download-32.png",
      "48": "assets/download-48.png"
    }
  }
}